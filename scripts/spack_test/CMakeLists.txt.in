cmake_minimum_required(VERSION 3.14)
project(kokkos_spack_test CXX)

find_package(Kokkos REQUIRED)

set(SRC_NAME_LIST "@SRC_NAME_LIST@")
set(BIN_NAME_LIST "@BIN_NAME_LIST@")
set(CMAKE_CXX_COMPILER ${Kokkos_CXX_COMPILER})

foreach(enum IN ZIP_LISTS BIN_NAME_LIST SRC_NAME_LIST)
    add_executable( ${enum_0} ${enum_1} )
    target_link_libraries( ${enum_0} Kokkos::kokkos )
endforeach()

