
#!/bin/bash

KOKKOS_INSTALL="@SPACK_PACKAGE_INSTALL_DIR@"
SPACK_TEST_SOURCE="@SPACK_PACKAGE_TEST_ROOT_DIR@"
SPACK_TEST_BUILD="@SPACK_PACKAGE_TEST_ROOT_DIR@"
TEST_FILES="@TEST_FILES@"

foreach (TEST_FILE in TEST_FILES)
	cmake "${SPACK_TEST_SOURCE}" -DKokkos_ROOT=${KOKKOS_INSTALL} -DTEST_FILE=${TEST_FILE}
endforeach()

